            android:text="delete"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            tools:layout_editor_absoluteX="209dp" tools:layout_editor_absoluteY="353dp"/>
    <TextView
            android:text="slot 1 "
            android:layout_width="126dp"
