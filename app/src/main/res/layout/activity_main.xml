            android:accessibilityLiveRegion="none" android:autoText="false" android:textAlignment="center"
            android:fontFamily="@font/roboto" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView4"/>
    <TextView
            android:text="slot 2"
            android:layout_width="126dp"
            android:layout_height="40"
            android:id="@+id/textView4"
            android:textColor="#FFFFFF" android:background="#BB2727"
