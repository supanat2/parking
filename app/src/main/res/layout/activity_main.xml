            android:text="slot 3"
            android:layout_width="127dp"
            android:layout_height="40"
            android:id="@+id/textView5"
            android:background="#BB2727"
            android:textColor="#F5F0F0"
            android:textAlignment="center" android:fontFamily="@font/roboto"
            app:layout_constraintStart_toEndOf="@+id/textView4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/editText"
    />

</androidx.constraintlayout.widget.ConstraintLayout>